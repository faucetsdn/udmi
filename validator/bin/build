#!/bin/bash -e

while [[ $# -gt 0 ]]; do
  if [[ "$1" == "check" ]]; then
    check=check
    shift
  elif [[ "$1" == "debug" ]]; then
    check="check -i"
    shift
  elif [[ "$1" == "covg" ]]; then
    covg=jacocoTestReport
    shift
  else
    break
  fi
done

ROOT=$(dirname $0)/..
BASE=..
cd $ROOT

echo Cleaning $ROOT/build/
rm -rf build/
mkdir build/

echo Importing udmi/bin...
cp -a ../bin build/udmi_bin/

jarfile=build/libs/validator-1.0-SNAPSHOT-all.jar

newest=$(ls -rt `find src/ $BASE/gencode/java -type f` | tail -n 1)
if [[ -z $check && -z $covg && -f $jarfile && $jarfile -nt $newest ]]; then
    echo $jarfile up-to-date, skipping build.
    exit 0
fi

if [[ -n $check ]]; then
    (cd $BASE/sites/udmi_site_model/devices; rm -rf XXX-* ACME-*)
    $BASE/bin/clone_model
fi

echo Java version $(java --version)

echo Building validator in $PWD

./gradlew shadow $check $covg $*

ls -l $jarfile

echo Done with validator build.
