{
  "title": "Discovery",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "enum": [
        1
      ]
    },
    "families": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z][a-z0-9]*(_[a-z0-9]+)*$": {
          "$ref": "#/definitions/discovery_family"
        }
      }
    }
  },
  "required": [
    "timestamp",
    "version",
    "families"
  ],
  "definitions": {
    "discovery_family": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[-_.:/0-9a-zA-Z]+$"
        },
        "group": {
          "type": "string"
        }
      },
      "required": [
        "id"
      ]
    }
  }
}
