{
  "title": "Localnet Config",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "subsystem": {
      "title": "Subsystem Reference",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "additionalProperties": false,
          "properties": {
            "local_id": {
              "type": "string"
            }
          },
          "required": [
            "local_id"
          ]
        }
      }
    }
  },
  "required": [
    "subsystem"
  ]
}
