{
  "title": "System Event",
  "description": "Used for system events such as logging. [System Event Documentation](../docs/messages/system.md#event)",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "description": "RFC 3339 timestamp the event payload was generated",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "version": {
      "description": "Major version of the UDMI schema",
      "type": "string"
    },
    "logentries": {
      "type": "array",
      "items": {
        "$ref": "file:common.json#/definitions/entry"
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "restart_count": {
          "type": "number"
        },
        "mem_total_mb": {
          "type": "number"
        },
        "mem_free_mb": {
          "type": "number"
        },
        "cpu_load_5m": {
          "type": "number"
        }
      }
    }
  },
  "required": [
    "timestamp",
    "version"
  ]
}
