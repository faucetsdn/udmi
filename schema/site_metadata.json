{
  "$udmi_version": "1.5.1",
  "title": "Site Metadata",
  "$section": "Site Model",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": [
    "timestamp",
    "version"
  ],
  "properties": {
    "timestamp": {
      "description": "RFC 3339 timestamp the site metadata was last updated",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "version": {
      "description": "Version of the UDMI schema",
      "type": "string"
    },
    "site": {
      "description": "Identifier for the site or building",
      "type": "string",
      "pattern": "^[A-Z]{2}-[A-Z]{3,4}-[A-Z0-9]{2,9}$",
      "examples": ["UK-LON-ABC", "US-NYC-HUD1"]
    },
    "name": {
      "description": "Name of the site or building",
      "type": "string",
      "examples": ["Cheesegrater", "Mountain View"]
    },
    "tags":{
      "description": "Tags associated with the site",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "pattern": "^[a-z0-9]+$"
      },
      "examples": [["new_construction"], ["existing", "brownfield"]]
    },
    "location": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "address": {
            "description": "Postal address of the site",
            "type": "string",
            "examples": ["1600 Amphitheatre Parkway, Mountain View, CA 94043, United States"]
        },
        "lat": {
            "description": "Latitude of the site in WGS84 coordinates, as indicated by a map marker ",
            "type": "number"
        },
        "long": {
            "description": "Longitude of the site in WGS84 coordinates, as indicated by a map marker",
            "type": "number"
        }
      }
    },
    "area": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "m2": {
            "description": "Area of the site in square meters",
            "type": "number",
            "examples": [1234, 256, 998765]
        }
      }
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "folder": {
          "description": "Folder where the UDMI site model is stored",
          "type": "string",
          "examples": ["/home/user/udmi_site_model", "https://drive.google.com/corp/drive/folders/iamadrivelocation"]
        },
        "repo": {
          "description": "Source repository where the UDMI site model is stored",
          "type": "string",
          "examples": ["https://github.com/faucetsdn/udmi_site_model", "git@github.com:faucetsdn/udmi_site_model.git"]
        }
      }
    },
    "device_count": {
            "description": "Number of devices in the UDMI site model",
            "type": "number",
            "examples": [32, 245]
    },
    "validated_count": {
            "description": "Number of validated devices in the UDMI site model",
            "type": "number",
            "examples": [19, 142]
    }
  }
}
