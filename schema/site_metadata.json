{
  "$udmi_version": "1.5.1",
  "title": "Site Metadata",
  "$section": "Site Model",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": [
    "timestamp",
    "version"
  ],
  "properties": {
    "timestamp": {
      "description": "RFC 3339 timestamp when the site metadata was last updated",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "version": {
      "description": "Version of the UDMI schema",
      "type": "string",
      "examples": ["1.5.0"]
    },
    "site": {
      "description": "Identifier for the site or building",
      "type": "string",
      "pattern": "^[A-Z]{2}-[A-Z]{3,4}-[A-Z0-9]{2,9}$",
      "examples": ["UK-LON-ABC", "US-NYC-DEF2"]
    },
    "name": {
      "description": "Name of the site or building",
      "type": "string",
      "examples": ["Cheesegrater", "Colosseum"]
    },
    "tags":{
      "description": "Tags associated with the site",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "pattern": "^[_a-z0-9]+$"
      },
      "examples": [["new_construction"], ["existing", "brownfield"]]
    },
    "location": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "address": {
            "description": "Postal address of the site",
            "type": "string",
            "examples": ["1600 Amphitheatre Parkway, Mountain View, CA 94043, United States", "Piazza del Colosseo, 1, 00184 Roma RM, Italy"]
        },
        "lat": {
            "description": "Latitude of the site in WGS84 coordinates, North of the equator, as indicated by a map marker",
            "type": "number",
            "examples": [41.8902]
        },
        "long": {
            "description": "Longitude of the site in WGS84 coordinates, East of Greenwich, as indicated by a map marker",
            "type": "number",
            "examples": [12.4922]
        }
      }
    },
    "area": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "net_occupied_area_m2": {
            "description": "Net Occupied Area of the site in square meters",
            "type": "number",
            "examples": [1234, 256, 997765]
        },
        "gross_internal_area_m2": {
            "description": "Gross internal Area of the site in square meters",
            "type": "number",
            "examples": [1278, 290, 998999]
        }
      }
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "docs": {
          "description": "Folder where the project documentation is stored",
          "type": "string",
          "examples": ["file://home/user/docs", "https://drive.google.com/corp/drive/folders/iamadrivelocation"]
        },
        "folder": {
          "description": "Folder where the UDMI site model is stored",
          "type": "string",
          "examples": ["file://home/user/udmi_site_model", "https://drive.google.com/corp/drive/folders/iamadrivelocation"]
        },
        "image": {
          "description": "Image of the site",
          "type": "string",
          "examples": ["file://home/user/image.png", "https://drive.google.com/corp/drive/folders/iamadrivelocation"]
        },
        "repo": {
          "description": "Source repository where the UDMI site model is stored",
          "type": "string",
          "examples": ["https://github.com/faucetsdn/udmi_site_model", "git@github.com:faucetsdn/udmi_site_model.git"]
        }
      }
    },
    "counts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "modeled": {
          "description": "Count of modeled devices",
          "type": "number",
          "examples": [42]
        },
        "validated": {
          "description": "Count of validated devices",
          "type": "number",
          "examples": [42]
        },
        "registered": {
          "description": "Count of registered devices",
          "type": "number",
          "examples": [42]
        },
        "discovered": {
          "description": "Count of discovered devices",
          "type": "number",
          "examples": [42]
        }
      }
    },
    "parameters": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "electricity": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "carbon_factor": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": {
                  "description": "Carbon dioxide factor for electricity consumption",
                  "type": "number",
                  "examples": [0.3]
                },
                "unit": {
                  "description": "Unit used for carbon dioxide factor for electricity consumption",
                  "type": "string",
                  "examples": ["kgCO2e/kWh"]
                }
              }
            },
            "unit_cost": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": {
                  "description": "Unit cost for electricity consumption",
                  "type": "number",
                  "examples": [0.14]
                },
                "unit": {
                  "description": "Unit used for measuring the unit cost of electricity consumption",
                  "type": "string",
                  "examples": ["£/kWh", "$/kWh"]
                }
              }
            }
          }
        },
        "gas": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "carbon_factor": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": {
                  "description": "Carbon dioxide factor for gas consumption",
                  "type": "number",
                  "examples": [0.18]
                },
                "unit": {
                  "description": "Unit used for carbon dioxide factor for gas consumption",
                  "type": "string",
                  "examples": ["kgCO2e/kWh"]
                }
              }
            },
            "unit_cost": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": {
                  "description": "Unit cost for gas consumption",
                  "type": "number",
                  "examples": [1.03]
                },
                "unit": {
                  "description": "Unit used for measuring the unit cost of gas consumption",
                  "type": "string",
                  "examples": ["£/kWh", "$/kWh"]
                }
              }
            }
          }
        },
        "water": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "unit_cost": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": {
                  "description": "Unit cost for water consumption",
                  "type": "number",
                  "examples": [1.8]
                },
                "unit": {
                  "description": "Unit used for measuring the unit cost of water consumption",
                  "type": "string",
                  "examples": ["£/m3", "$/gal"]
                }
              }
            }
          }
        }
      }
    }
  }
}
