{
  "title": "State",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "[State](../../docs/messages/state.md) message, defined by [`state.json`]",
  "additionalProperties": false,
  "required": [ 
    "timestamp",
    "version",
    "system"
  ],
  "properties": {
    "timestamp": {
      "description": "RFC 3339 Timestamp the state payload was generated",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "version": {
      "description": "Major version of the UDMI schema",
      "type": "integer",
      "minimum": 1,
      "maximum": 1
    },
    "system": {
      "$ref": "file:state_system.json#"
    },
    "gateway": {
      "$ref": "file:state_gateway.json#"
    },
    "blobset": {
      "$ref": "file:state_blobset.json#"
    },
    "pointset": {
      "$ref": "file:state_pointset.json#"
    }
  }
}
