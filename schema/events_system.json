{
  "$udmi_version": "1.5.2",
  "title": "System Events",
  "description": "Used for system events such as logging. [System Event Documentation](../docs/messages/system.md#event)",
  "$section": "Messages",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "description": "RFC 3339 UTC timestamp the event payload was generated",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "version": {
      "description": "Version of the UDMI schema",
      "type": "string"
    },
    "upgraded_from": {
      "description": "Original version of schema pre-upgrade",
      "type": "string"
    },
    "last_config": {
      "description": "Last config received",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "logentries": {
      "type": "array",
      "items": {
        "$ref": "file:entry.json"
      }
    },
    "event_count": {
      "description": "Accumulated count of the number of system event messages sent.",
      "type": "integer"
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mem_total_mb": {
          "type": "number"
        },
        "mem_free_mb": {
          "type": "number"
        },
        "store_total_mb": {
          "type": "number"
        },
        "store_free_mb": {
          "type": "number"
        },
        "system_load": {
          "type": "number"
        }
      }
    }
  },
  "required": [
    "timestamp",
    "version"
  ]
}
