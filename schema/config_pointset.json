{
  "title": "pointset config snippet",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "state_etag": {
      "type": "string",
      "maxLength": 32
    },
    "set_value_expiry": {
      "type": "string",
      "maxLength": 32
    }
    "sample_limit_sec": {
      "type": "number",
      "minimum": 1,
      "maximum": 86400
    },
    "sample_rate_sec": {
      "type": "number",
      "minimum": 1,
      "maximum": 86400
    },
    "points": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z][a-z0-9]*(_[a-z0-9]+)*$": {
          "additionalProperties": false,
          "properties": {
            "ref": {
              "type": "string"
            },
            "set_value": {
              "type": ["number", "string", "boolean"]
            }
          }
        }
      }
    }
  }
}
