{
  "$udmi_version": "1.4.1",
  "title": "Udmi State",
  "description": "State of a UDMI reflector client",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "description": "RFC 3339 Timestamp the state payload was generated",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "version": {
      "description": "Version of the UDMI schema",
      "type": "string"
    },
    "registry": {
      "title": "Registry Udmi State",
      "type": "object",
      "properties": {
        "iot_provider": {
          "$ref": "file:common.json#/definitions/provider"
        }
      }
    },
    "setup": {
      "title": "Setup Udmi State",
      "type": "object",
      "properties": {
        "user": {
          "type": "string",
          "description": "User id of the person running the tool"
        },
        "update_to": {
          "type": "string",
          "description": "Optional version for a udmis update trigger"
        }
      }
    }
  }
}
