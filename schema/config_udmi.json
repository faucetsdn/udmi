{
  "$udmi_version": "1.4.1",
  "title": "Udmi Config",
  "description": "Config for a UDMI reflector client",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "description": "RFC 3339 Timestamp the state payload was generated",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "version": {
      "description": "Version of the UDMI schema",
      "type": "string"
    },
    "udmi": {
      "title": "Setup Udmi Config",
      "type": "object",
      "properties": {
        "functions_min": {
          "type": "integer"
        },
        "functions_max": {
          "type": "integer"
        },
        "udmi_version": {
          "type": "string"
        },
        "udmi_functions": {
          "type": "string"
        },
        "last_state": {
          "type": "string",
          "format": "date-time"
        },
        "deployed_at": {
          "type": "string",
          "format": "date-time"
        },
        "deployed_by": {
          "type": "string"
        }
      }
    }
  }
}
