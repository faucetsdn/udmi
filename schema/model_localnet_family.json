{
  "$udmi_version": "1.5.2",
  "title": "Family Localnet Model",
  "type": "object",
  "description": "The type of network",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "addr": {
      "type": "string",
      "description": "The address of a device on the fieldbus/local network",
      "examples": ["192.168.1.3", "41489"],
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "network": {
      "type": "string",
      "description": "The network designator for this device in the family-defined format",
      "examples": ["192.168.1.0/24", "12732"]
    },
    "adjunct": {
      "type": "object",
      "existingJavaType": "java.util.Map<String, String>",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "string"
        }
      }
    },
    "shadow_id": {
      "description": "Specifies that this is a shadow of the indicated device",
      "type": "string"
    },
    "parent_id": {
      "type": "string",
      "description": "The device id of the node's parent"
    },
    "family": {
      "description": "The family designator, used only when the entry is not keyed in a family map",
      "type": "string",
      "examples": ["ipv4", "bacnet"]
    }
  }
}
