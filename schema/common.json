{
  "title": "Common",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "entry": {
      "title": "Entry",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "message": {
          "type": "string"
        },
        "detail": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "pattern": "^[a-z][._a-zA-Z]*[a-zA-Z]$"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "level": {
          "$comment": "https://cloud.google.com/logging/docs/reference/v2/rest/v2/LogEntry#logseverity",
          "type": "integer",
          "multipleOf": 1,
          "minimum": 100,
          "maximum": 800
        }
      },
      "required": [
        "message",
        "category",
        "timestamp",
        "level"
      ]
    }
  }
}
