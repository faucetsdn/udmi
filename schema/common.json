{
  "$udmi_version": "1.5.0",
  "title": "Common",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "mode": {
      "title": "System Mode",
      "description": "Operating mode for the device. Default is 'active'.",
      "enum": [
        "initial",
        "active",
        "updating",
        "restart",
        "terminate",
        "shutdown"
      ]
    },
    "provider": {
      "title": "Iot Provider",
      "enum": [
        "local",
        "dynamic",
        "implicit",
        "pubsub",
        "jwt",
        "gcp_native",
        "gbos",
        "clearblade_native",
        "clearblade"
      ]
    },
    "stage": {
      "title": "FeatureStage",
      "description": "Stage of a feature implemenation",
      "enum": [
        "disabled",
        "alpha",
        "preview",
        "beta",
        "stable"
      ]
    },
    "phase": {
      "title": "BlobPhase",
      "description": "Phase for the management of a configuration blob.",
      "enum": [
        "apply",
        "final"
      ]
    },
    "blobsets": {
      "title": "System Blobsets",
      "description": "Predefined system blobsets",
      "enum": [
        "_iot_endpoint_config"
      ]
    },
    "entry": {
      "$ref": "file:entry.json"
    }
  }
}
