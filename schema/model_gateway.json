{
  "$udmi_version": "1.5.2",
  "title": "Gateway Model",
  "description": "[Gateway Documentation](../docs/specs/gateway.md)",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "gateway_id": {
      "description": "The device ID of the gateway the device is bound to",
      "type": "string",
      "pattern": "^[A-Z]{2,6}-[1-9][0-9]*$",
      "examples": ["GAT-100"]
    },
    "target": {
      "$ref": "file:model_localnet_family.json"
    },
    "proxy_ids": {
      "description": "An array of all the device IDs which are bound to the device",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{2,6}-[1-9][0-9]*$"
      },
      "examples": [["AHU-22"]]
    },
    "group_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{2,6}-[1-9][0-9]*$"
      },
      "examples": [["LGRP-22", "LGRP-384"]]
    },
    "parent": {
      "description": "Parent device to which the device is physically connected",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target": {
            "description": "ID of the parent device to which the device is physically connected",
            "type": "string",
            "pattern": "^[A-Z]{2,6}-[1-9][0-9]*$",
            "examples": ["DDC-1", "CGW-2"]
        },
        "family": {
            "description": "Connection family/protocol of the parent device to which the device is physically connected",
            "type": "string",
            "examples": ["bacnet_mstp", "modbus_tcp", "mqtt"]
        }
      }
    }
  }
}
