{
  "$id": "https://raw.githubusercontent.com/faucetsdn/udmi/1.4.1/schema/configuration_endpoint.json",
  "title": "Endpoint Configuration",
  "description": "Parameters to define an MQTT endpoint",
  "$section": "Blobs",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "properties": {
    "protocol": {
      "enum": [
        "mqtt"
      ]
    },
    "hostname": {
      "type": "string"
    },
    "port": {
      "type": "string",
      "default": "8883"
    },
    "client_id": {
      "type": "string"
    },
    "nonce": {
      "type": "string",
      "pattern": "^[0-9A-Za-z=\\-/:]{1,}$"
    }
  },
  "required": [
    "protocol",
    "hostname",
    "client_id"
  ]
}
