{
  "$udmi_version": "1.5.2",
  "title": "Endpoint Configuration",
  "description": "Parameters to define a message endpoint",
  "$section": "Blobs",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "name": {
      "description": "Friendly name for this flow (debugging and diagnostics)",
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "protocol": {
      "enum": [
        "local",
        "pubsub",
        "file",
        "trace",
        "mqtt"
      ],
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "transport": {
      "enum": [
        "ssl",
        "tcp"
      ],
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "hostname": {
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "payload": {
      "description": "Simple payload template for simple injection use cases",
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "error": {
      "description": "Error message container for capturing errors during parsing/handling",
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "port": {
      "type": "integer",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "config_sync_sec": {
      "description": "Delay waiting for config message on start, 0 for default, <0 to disable",
      "type": "integer",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "client_id": {
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "topic_prefix": {
      "description": "Prefix for message topics",
      "type": "string",
      "pattern": "^[-_/a-zA-Z0-9]+$",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "recv_id": {
      "description": "Id for the receiving message channel",
      "type": "string",
      "pattern": "^[-_/a-zA-Z0-9#]+$",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "send_id": {
      "description": "Id for the sending messages channel",
      "type": "string",
      "pattern": "^[-_/a-zA-Z0-9#]+$",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "side_id": {
      "description": "Id for a side-car message channel",
      "type": "string",
      "pattern": "^[-_/a-zA-Z0-9#]+$",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "gatewayId": {
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "deviceId": {
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "enabled": {
      "description": "Indicator if this endpoint should be active (null or non-empty)",
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "noConfigAck": {
      "description": "True if config messages should not be acked (lower QOS)",
      "type": "boolean",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "capacity": {
      "description": "Queue capacity for limiting pipes",
      "type": "integer",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "publish_delay_sec": {
      "description": "Artifical publish delay for testing",
      "type": "integer",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "periodic_sec": {
      "description": "Rate for periodic task execution",
      "type": "integer",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "keyBytes": {
      "note": "Should be type byte[], which is not supported, so fall-back to generic default object",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "algorithm": {
      "type": "string",
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    },
    "auth_provider": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "basic": {
          "additionalProperties": false,
          "properties": {
            "username": {
              "type": "string",
              "$presentation": {
                "display": "show",
                "style": "bold"
              }
            },
            "password": {
              "type": "string",
              "$presentation": {
                "display": "show",
                "style": "bold"
              }
            }
          }
        },
        "jwt": {
          "additionalProperties": false,
          "properties": {
            "audience": {
              "type": "string",
              "$presentation": {
                "display": "show",
                "style": "bold"
              }
            }
          }
        }
      }
    },
    "generation": {
      "description": "The timestamp of the endpoint generation",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"],
      "$presentation": {
        "display": "show",
        "style": "bold"
      }
    }
  },
  "required": [
    "protocol",
    "hostname",
    "client_id"
  ]
}
