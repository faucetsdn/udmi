{
  "$udmi_version": "1.5.2",
  "title": "Modbus Family Localnet Model",
  "type": "object",
  "description": "The type of network",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "addr": {
      "$ref": "file:model_localnet_family.json#/properties/addr"
    },
    "modbus_adjunct": {
      "type": "object",
      "properties": {
        "serial_port": {
          "type": "string",
          "examples": [
            "/dev/USB0",
            "COM1:"
          ],
          "$presentation": {
            "paths": {
              "model_localnet.families.modbus.adjunct": {
                "section": "localnet"
              }
            }
          }
        },
        "bit_rate": {
          "type": "integer",
          "examples": [
            9600
          ],
          "$presentation": {
            "paths": {
              "model_localnet.families.modbus.adjunct": {
                "section": "localnet"
              }
            }
          }
        },
        "data_bits": {
          "type": "string",
          "examples": [
            "5|6|7|8"
          ],
          "$presentation": {
            "paths": {
              "model_localnet.families.modbus.adjunct": {
                "section": "localnet"
              }
            }
          }
        },
        "stop_bits": {
          "type": "string",
          "examples": [
            "1|1.5|2"
          ],
          "$presentation": {
            "paths": {
              "model_localnet.families.modbus.adjunct": {
                "section": "localnet"
              }
            }
          }
        },
        "parity": {
          "type": "string",
          "examples": [
            "none",
            "odd",
            "even",
            "mark",
            "space"
          ],
          "$presentation": {
            "paths": {
              "model_localnet.families.modbus.adjunct": {
                "section": "localnet"
              }
            }
          }
        },
        "encoding": {
          "type": "string",
          "examples": [
            "rtu",
            "ascii"
          ],
          "$presentation": {
            "paths": {
              "model_localnet.families.modbus.adjunct": {
                "section": "localnet"
              }
            }
          }
        }
      }
    }
  }
}
