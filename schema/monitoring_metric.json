{
    "$udmi_version": "1.4.1",
    "title": "Monitoring metric",
    "description": "One metric",
    "type": "object",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "properties": {
      "timestamp": {
        "type": "string",
        "format": "date-time"
      },
      "severity": {
        "type": "string",
        "examples": ["ERROR"]
      },
      "project": {
        "type": "string"
      },
      "location": {
        "type": "string"
      },
      "registry": {
        "type": "string"
      },
      "device_id": {
        "type": "string",
        "examples": ["AHU-1"]
      },
      "device_num": {
        "type": "string",
        "examples": ["12345"],
        "pattern": "^[0-9]+$"
      },
      "status_message": {
        "type": "string"
      }
    }
}
