{
  "$udmi_version": "1.5.2",
  "title": "Localnet Model",
  "description": "Used to describe device local network parameters",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defaultPresentation": "localnet",
  "additionalProperties": false,
  "properties": {
    "parent": {
      "description": "Parent device to which the device is physically connected",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target": {
            "description": "ID of the parent device to which the device is physically connected",
            "type": "string",
            "pattern": "^[A-Z]{2,6}-[1-9][0-9]*$",
            "examples": ["DDC-1", "CGW-2"]
        },
        "family": {
            "description": "Connection family/protocol of the parent device to which the device is physically connected",
            "type": "string",
            "examples": ["bacnet_mstp", "modbus_tcp", "mqtt"]
        }
      }
    },
    "families": {
      "additionalProperties": false,
      "existingJavaType": "java.util.HashMap<String, FamilyLocalnetModel>",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "$ref": "file:model_localnet_family.json"
        }
      },
      "examples": ["bacnet", "modbus", "mbus", "ether", "ipv4", "ipv6", "iot"],
      "$presentation": {
        "presentationProperties": {
          "bacnet": {
            "$ref": "file:model_localnet_family.json",
            "properties": {
              "adjunct": {
                "$presentation": {
                  "presentationProperties": {
                    "name": { },
                    "description": { }
                  }
                }
              }
            }
          },
          "modbus": {
            "$ref": "file:model_localnet_family.json",
            "properties": {
              "adjunct": {
                "$presentation": {
                  "presentationProperties": {
                    "serial_port": { },
                    "bit_rate": { "type": "integer" },
                    "data_bits": { },
                    "stop_bits": { },
                    "parity": { },
                    "encoding": { }
                  }
                }
              }
            }
          },
          "mbus":   {
            "$ref": "file:model_localnet_family.json",
            "properties": {
              "adjunct": {
                "$presentation": {
                  "presentationProperties": {
                    "serial_port": { },
                    "bit_rate": { "type": "integer" },
                    "secondary_addr": { }
                  }
                }
              }
            }
          },
          "ether":  { "$ref": "file:model_localnet_family.json" },
          "ipv4":   { "$ref": "file:model_localnet_family.json" },
          "ipv6":   { "$ref": "file:model_localnet_family.json" },
          "fqdn":   { "$ref": "file:model_localnet_family.json" }
        }
      }
    }
  },
  "required": [
    "families"
  ]
}
