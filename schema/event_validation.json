{
  "title": "Validation Event",
  "description": "Validation result",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "description": "RFC 3339 timestamp the discover telemetry event was generated",
      "type": "string",
      "format": "date-time",
      "examples": ["2019-01-17T14:02:29.364Z"]
    },
    "version": {
      "description": "Version of the UDMI schema",
      "type": "string"
    },
    "last_updated": {
      "description": "Last time this validation report was updated",
      "format": "date-time",
      "type": "string"
    },
    "site_id": {
      "description": "Site id being validated",
      "type": "string"
    },
    "device_id": {
      "description": "Device id that has been validated",
      "type": "string"
    },
    "subfolder": {
      "description": "Subfolder of the validated message",
      "type": "string"
    },
    "subtype": {
      "description": "Subtype of the validated message",
      "type": "string"
    },
    "status": {
      "$ref": "file:common.json#/definitions/entry"
    },
    "extra_devices": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{2,6}-[0-9]{1,6}$"
      }
    },
    "devices": {
      "type": "object",
      "additionalProperties": false,
      "existingJavaType": "java.util.Map<String, DeviceValidationEvent>",
      "patternProperties": {
        "^[A-Z]{2,6}-[0-9]{1,6}$": {
          "$ref": "file:event_validation_device.json"
        }
      }

    }
  },
  "required": [
    "timestamp",
    "version",
    "site_id"
  ]
}
