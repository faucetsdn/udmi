#!/bin/bash -ex

cd $(realpath $(dirname $0)/..)

echo Initializing terraform for project ${GCP_PROJECT_NAME}

for file in main.tf udmi-sites.tf terraform.tfvars; do
    if [[ ! -f $file ]]; then
        echo Configuration file $file does not exist, did you run bin/setup?
        false
    fi
done

terraform init $*
