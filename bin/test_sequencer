#!/bin/bash -e

ROOT_DIR=$(dirname $0)/..
cd $ROOT_DIR

if [[ $# -lt 1 ]]; then
    echo Usage: $0 PROJECT_ID [tests...]
    false
fi

project_id=$1
shift
targets=$*

[[ -n $GITHUB_RUN_NUMBER ]] && echo "Workflow run number $GITHUB_RUN_NUMBER" || true
if [[ -n `which rot13` ]]; then
   # Project is provided as a secret, so obfuscate to prevent redactions in server-side logs.
   echo 'Using target project (rot13):' $(echo $project_id | rot13)
   echo 'With SEQUENCER_OPTS (rot13):' $(echo $SEQUENCER_OPTS | rot13)
else
   echo 'Using target project:' $project_id
   echo 'With SEQUENCER_OPTS:' $SEQUENCER_OPTS
fi

site_path=sites/udmi_site_model
device_id=AHU-1

if [[ -z $targets ]]; then
    rm -rf $site_path/out/devices/$device_id/tests
else
    for target in $targets; do
        rm -rf $site_path/out/devices/$device_id/tests/$target
    done
fi

test_out_base=sites/udmi_site_model/out/devices/AHU-1/tests
mkdir -p $test_out_base
all_tests=$(ls -1 $test_out_base)

serial_no=sequencer-$RANDOM
echo Using pubber with serial $serial_no

PUBBER_OUT=pubber.out

pids=`ps ax | fgrep pubber | fgrep java | awk '{print $1}'`
if [[ -n $pids ]]; then
    echo Killing pubber pids $pids
    kill $pids
fi

bin/clone_model # Clone, and check that version is correct.

bin/reset_config $site_path $project_id $device_id

pubber/bin/build

echo Writing pubber output to $PUBBER_OUT
echo bin/pubber $site_path $project_id $device_id $serial_no
bin/pubber $site_path $project_id $device_id $serial_no > $PUBBER_OUT 2>&1 &

WAITING=10
for i in `seq 1 $WAITING`; do
    if fgrep "Connection complete" $PUBBER_OUT; then
        break
    fi
    echo Waiting for pubber startup $((WAITING - i))...
    sleep 2
done

if [[ $i -eq $WAITING ]]; then
    echo pubber startup failed:
    cat $PUBBER_OUT
    false
fi

bin/sequencer -a $SEQUENCER_OPTS $site_path $project_id $device_id $serial_no $targets 2>&1 | tee sequencer.out
echo Completed execution of sequencer test run.

sed -i -e 's/.*sequencer RESULT/RESULT/' /tmp/sequencer.out
echo Copied output to /tmp/sequencer.out for later examination.

pids=`ps ax | fgrep pubber | fgrep java | awk '{print $1}'`
if [[ -n $pids ]]; then
    echo Killing pubber pids $pids
    kill $pids
else
    echo No pubber pids found, likely due to premature termination: failing test run.
    false
fi

generated=docs/specs/sequences/generated.md
cp $generated /tmp/  # Save for test/comparison later
bin/gencode_seq

echo Comparing diff /tmp/sequencer.out etc/sequencer.out
diff -u /tmp/sequencer.out etc/sequencer.out

echo Comparing diff /tmp/generated.md docs/specs/sequences/generated.md
diff -u /tmp/generated.md docs/specs/sequences/generated.md || (
    echo Run bin/gencode_seq to regenerate output, if necessary.
    false
    )

generated_sequences=$test_out_base/%/sequence.md
expected_sequences=validator/sequences/%/sequence.md
echo Comparing diff $generated_sequences $expected_sequences
echo $all_tests | xargs -I% diff -u $generated_sequences $expected_sequences

echo Done with base test_sequencer run.
