#!/bin/bash -e

ROOT_DIR=$(dirname $0)/..
mkdir -p $ROOT_DIR/sites
cd $ROOT_DIR/sites 

MODEL_DIR=udmi_site_model
MODEL_VER=1.10
TEST_SITE_GIT=https://github.com/faucetsdn/$MODEL_DIR.git
MODEL_REPO=origin

echo Cloning model as $PWD/$MODEL_DIR
if [[ -d $MODEL_DIR ]]; then
    echo Model directory already exists, skipping.
else
    git clone $TEST_SITE_GIT
fi

cd $MODEL_DIR

git fetch $MODEL_REPO $MODEL_VER
git checkout $MODEL_VER
git log -n 1

if [[ -f validator/rsa_private.pkcs8 ]]; then
    echo Validator key file already exists for validator/rsa_private.pkcs8
else
    mkdir -p validator
    echo Creating validator key file from devices/AHU-1/rsa_private.pkcs8
    echo devices/AHU-1/rsa_private.pkcs8 > validator/rsa_private.SOURCE
    cp devices/AHU-1/rsa_private.pkcs8 validator/
fi
