#!/bin/bash -e

ROOT_DIR=$(dirname $0)/..
cd $ROOT_DIR

if [[ $# != 1 ]]; then
    echo $0 project_id
    false
fi

site_model=udmi_site_model
device_id=AHU-1
serial_no=sequencer-$RANDOM
project_id=$1
shift

bin/setup_site

cat <<EOF > /tmp/validator_config.json
{
  "project_id": "$project_id",
  "site_model": "$site_model",
  "device_id": "$device_id",
  "serial_no": "$serial_no",
  "key_file": "$site_model/devices/$device_id/rsa_private.pkcs8"
}
EOF
