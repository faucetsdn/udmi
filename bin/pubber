#!/bin/bash -e

ROOT_DIR="$(pwd)/$line"

if [ $# != 3 ]; then
    echo $0 PROJECT_ID SITE_PATH DEVICE_ID
    false
fi

project_id=$1
site_path=$2
device_id=$3
shift
shift
shift

if [ ! -f $site_path/cloud_iot_config.json ]; then
    echo cloud_iot_config.json not found at $site_path
    false
fi

echo Building pubber...
$ROOT_DIR/pubber/bin/build > /dev/null

echo Running tools version `git describe`

$ROOT_DIR/pubber/bin/run $project_id $site_path $device_id
