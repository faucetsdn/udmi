{
  "name": "udmd-api",
  "version": "1.0.0",
  "description": "API for the Universal Device Management Dashboard",
  "author": "Buildings IOT",
  "main": "dist/app.js",
  "license": "UNLICENSED",
  "dependencies": {
    "apollo-datasource-graphql": "^1.3.2",
    "apollo-server": "^3.6.2",
    "dotenv": "^16.0.0",
    "graphql": "^16.2.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.2.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "dev": "nodemon --watch src --watch data -e js,ts,txt,response,json --exec node -r ts-node/register --inspect=0.0.0.0:6329  src/app.ts",
    "start": "ts-node src/app.ts",
    "test": "NODE_ENV=test jest --runInBand",
    "testInteractive": "NODE_ENV=test jest --runInBand --watchAll",
    "postinstall": "cd ../.. && husky install udmd/api/.husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": "prettier --single-quote --arrow-parens always --trailing-comma es5 --print-width 120 --write"
  }
}
